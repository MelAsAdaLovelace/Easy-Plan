<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/banner2"
    android:gravity="bottom | center"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="330dp"
        android:layout_height="550dp"
        android:background="#4A070707"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="300dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/mainColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/logEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:shadowColor="#F5F0F0"
            android:textColor="#CFCFCF"
            android:textColorHint="@color/textHintColorEmailPass"
            android:textSize="12dp"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/logPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:shadowColor="#F5F0F0"
            android:textColor="#CFCFCF"
            android:textColorHint="@color/textHintColorEmailPass"
            android:textSize="12dp"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/loginRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="sans-serif-light"
            android:text="@string/rememberme"
            android:textColor="@color/textColorAlmostWhite"
            android:textColorHighlight="#00B40000"
            android:buttonTint="@color/mainColor"
            android:textColorLink="#C8F9FBFF"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/wanttoregister"
                android:textColor="#EBEBEB"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/logSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:fontFamily="sans-serif"
                android:linksClickable="true"
                android:text="@string/signup"
                android:onClick="goToSignUp"
                android:textColor="@color/mainColor"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/forgetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/forgetpassword"
            android:clickable="true"
            android:textColor="#FFFAFA"
            android:textSize="10dp" />


        <Button
            android:id="@+id/logButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_login"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="sans-serif-smallcaps"
            android:stateListAnimator="@null"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/mainColor"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>

